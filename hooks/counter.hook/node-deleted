#! /bin/bash

set -e

json=$(< /dev/stdin)

# This script requires `jq` in $PATH: http://stedolan.github.io/jq/
name=$(jq '.hook.name' <<< "${json}")
value=$(( $(jq '.hook.configuration.node-deleted' <<< "${json}") + 1 ))

cat <<EOF
{
  "hook": {
    "configuration": {
      "update": {
        "node-deleted": $value
      }
    }
  },
  "node": {
    "metadata": {
      "update": {
        "last_hook_execution": "node-deleted"
      }
    }
  }
}
EOF
